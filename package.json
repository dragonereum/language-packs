{
  "name": "@dragonereum/language-packs",
  "description": "Dragonereum language packs for UI.",
  "version": "1.0.0",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragonereum/language-packs.git"
  },
  "bugs": {
    "url": "https://github.com/dragonereum/language-packs/issues"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "json5": "^2.1.0",
    "lint-staged": "^8.1.0"
  },
  "scripts": {
    "build:en": "json5 -s 2 -o dist/en.json locales/en.json5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "locales/**/*.json5": [
      "json5 -v"
    ]
  }
}
